- function assets(path) { return (manifest || {})[path] || path; }

doctype html
html
  head
    title The Orient

    meta( name='author', value='Damon Zucconi' )
    meta( name='description' content='Damon Zucconi, The Orient (2016)' )
    meta( property='og:title' content='The Orient (2016)' )
    meta( property='og:description' content='Damon Zucconi, The Orient (2016)' )
    meta( property='og:url' content='http://work.damonzucconi.com/the-orient' )

    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
    meta( name='viewport', content='width=device-width, initial-scale=1, user-scalable=0' )
    meta( name='apple-mobile-web-app-capable', content='yes' )
    meta( name='apple-mobile-web-app-status-bar-style', content='black' )

    link( rel='apple-touch-icon', href= assets('img/icon.png') )
    link( rel='icon', href= assets('img/favicon.ico') )
    link( rel='stylesheet', href= assets('index.css') )
  body
    #display.type
      | &hellip;

    #compass
      #north.direction
      #east.direction
      #south.direction
      #west.direction

    if process.env.NODE_ENV === 'development'
      input( type='range', id='debug', min='0', value='0', max='360.0', step='0.001' )

    script( src= assets('index.js') )
